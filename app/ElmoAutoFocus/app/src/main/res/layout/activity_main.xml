<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.via.elmoaf.MainActivity">


    <com.via.elmoaf.view.CameraView
        android:id="@+id/mCameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/mBTCatchNativePreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="catch native preview"
        />

    <Button
        android:id="@+id/mBTCatchPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="catch preview"
        android:layout_below="@id/mBTCatchNativePreview"
        />



</RelativeLayout>
